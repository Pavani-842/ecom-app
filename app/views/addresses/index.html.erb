<h1>Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Line 1</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Pin</th>
      <!-- Add more address attributes here -->
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.customer.name if address.customer %></td>
        <td><%= address.address_line_1 %></td>
        <td><%= address.city %></td>
        <td><%= address.state %></td>
        <td><%= address.country %></td>
        <td><%= address.pin %></td>
        <!-- Add more address attributes here -->
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Address', new_address_path %>
